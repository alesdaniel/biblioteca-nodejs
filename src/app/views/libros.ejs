<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libreria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">   
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-band mx-1">Prestamo</a>
        <a href="/clientes" class="navbar-band mx-auto">Socios</a>
        <a href="/carga" class="nav-item nav bg-dark mx-1">Provincias</a>
        <a href="/genero" class="nav-item nav bg-dark mx-1">Genero</a>
        <a href="/Libros" class="nav-item nav bg-dark mx-1">Libros</a>
    </nav>
    <!-- Plantilla --> 
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                      <th>ID</th>
                      <th>ISBN</th>
                      <th>Titulo</th>
                      <th>Autor</th>
                      <th>Genero</th>
                      <th></th>
                    </tr>
                    <% for (var i=0;i<libros.length;i++) { %>
                    <tr>
                        <td><%= libros[i].id_libro %></td>
                        <td><%= libros[i].isbn %></td>
                        <td><%= libros[i].titulo %></td>
                        <td><%= libros[i].id_autor %></td>
                        <td><%= libros[i].genero %></td>
                        <td><a href="/borrar_libro/<%= libros[i].id_libro %>" class="btn btn-danger">Borrar</a>
                            <a href="/editar_libro/<%= libros[i].id_libro %>" class="btn btn-primary">Editar</a></td>
                    </tr>
                    <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/libros" method="post" class="card-body">
                    <h3 class="card-title">Libros</h3>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="isbn" placeholder="ISBN"></input>
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="titulo" placeholder="titulo"></input>
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="autor" placeholder="Autor"></input>
                    </div>
                    <div class="form-group mt-4"> 
                    <select name="genero" class="w-100">
                        <% generos.forEach(gen =>{ %>    
                        <option value="<%= gen.id_genero %>"><%= gen.genero %></option>
                        <%}) %>   
                    </select>
                     </div>
                    <input type="submit" class="btn-primary my-4" value="Guardar">
                </form>
            </div>
        </div>
    </div>                
</body>
</html>