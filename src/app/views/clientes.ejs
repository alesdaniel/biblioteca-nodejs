<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libreria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">   
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-band mx-1">Prestamo</a>
        <a href="/clientes" class="navbar-band mx-auto">Socios</a>
        <a href="/carga" class="nav-item nav bg-dark mx-1">Provincias</a>
        <a href="/genero" class="nav-item nav bg-dark mx-1">Genero</a>
        <a href="/Libros" class="nav-item nav bg-dark mx-1">Libros</a>
    </nav>
    <!-- Plantilla --> 
    
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                      <th>#</th>
                      <th>Nombre</th>
                      <th>Apellido</th>
                      <th>Provincia</th>
                    </tr>
                    <% for (var i=0;i<clientes.length;i++) { %>
                    <tr>
                        <td><%= clientes[i].id_clientes %></td>
                        <td><%= clientes[i].nombre %></td>
                        <td><%= clientes[i].apellido %></td>
                        <td><%= clientes[i].provincia %></td>
                    </tr>
                    <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/clientes" method="post" class="card-body">
                    <h3 class="card-title">Agregar Clientes</h3>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="nombre"></input>
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="apellido"></input>
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="id_provincia"></input>
                    </div>

                    <input type="submit" class="btn-primary my-4" value="Guardar">
                </form>
            </div>
        </div>
    </div>                
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 card">
                <form action="/borrar" method="post" class="w-50 py-5">
                    <select name="registroId" class="w-100">
                        <% clientes.forEach(cliente =>{ %>    
                        <option value="<%= cliente.id_clientes %>"><%= cliente.nombre + ' ' + cliente.apellido %></option>
                        <%}) %>   
                    </select>
                    <button type="submit" class="btn- btn-primary px-5 my-2">Eliminar</button>
                </form>
            </div>        
        <div class="col-md-6 mt-4 card">
            <h3 class="card-title">Modificar Registro</h3>
            <form action="/editar" method="post" class="card-body">
                <label for="registroId">Selecciona el registro a editar</label>
                <select name="registroId">
                    <% clientes.forEach(cliente =>{ %>
                        <option value="<%= cliente.id_clientes %>"><%= cliente.nombre + ' ' + cliente.apellido %></option>
                    <% }) %>
                </select>
                <div class="form-group mt-4">
                    <input type="text" name="nombre" class="form-control">
                </div>                    
                <div class="form-group mt-4">                    
                    <input type="text" name="apellido" class="form-control">
                </div>    
                <div class="form-group mt-4">                    
                    <input type="text" name="id_provincia" class="form-control">                    
                </div>
                <button type="submit" class="btn btn-primary my-4">Editar</button>
            </form>
        </div>
    </div>                
</div>
</body>
</html>