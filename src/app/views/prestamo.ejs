<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libreria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">   
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-band mx-1">Prestamo</a>
        <a href="/devueltos" class="navbar-band mx-1">Devueltos</a>
        <a href="/clientes" class="navbar-band mx-auto">Socios</a>
        <a href="/carga" class="nav-item nav bg-dark mx-1">Provincias</a>
        <a href="/genero" class="nav-item nav bg-dark mx-1">Genero</a>
        <a href="/Libros" class="nav-item nav bg-dark mx-1">Libros</a>
    </nav>
    <!-- Plantilla --> 
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                      <th>#</th>
                      <th>Socio</th>
                      <th>Libro </th>
                      <th>Estado</th>
                      <th>Fecha Prestamo</th>
                      <th>Fecha Devolucion</th>
                      <th></th>
                    </tr>
                    <% for (var i=0;i<prestados.length;i++) { %>
                    <tr>
                        <td><%= prestados[i].id_prestamo %></td>
                        <td><%= prestados[i].id_cliente %></td>
                        <td><%= prestados[i].id_libro %></td>
                        <td>
                            <% if (prestados[i].id_estado  == 0) { %>
                            <p> Prestado</p>
                            <%} else { %>
                            <p> Devuelto </p>
                            <% } %>
                        </td>
                        <td><%= prestados[i].fecha_prestamo %></td>
                        <td><%= prestados[i].fecha_devolucion %></td>
                        <td><a href="/devolucion/<%= prestados[i].id_prestamo %>" class="btn btn-primary">Devolver</a></td>
                    </tr>
                    <% } %>
                </table>
            </div> 
            <div class="col-md-6 mt-4 card">
                <form action="/prestamo" method="post" class="card-body">
                    <h3 class="card-title">Alta Prestamo</h3>
                    <div class="form-group mt-4"> 
                        <select name="socios" class="w-100">
                            <% socios.forEach(soc =>{ %>    
                            <option value="<%= soc.id_socios %>"><%= soc.nombre+' '+soc.apellido %></option>
                            <%}) %>   
                        </select>
                    </div>
                    <div class="form-group mt-4"> 
                        <select name="libros" class="w-100">
                            <% libros.forEach(lib =>{ %>    
                            <option value="<%= lib.id_libro %>"><%= lib.titulo+' '+lib.isbn %></option>
                            <%}) %>   
                        </select>
                    </div>
                    <input type="submit" class="btn-primary my-4" value="Guardar">
                </form>
            </div>
    </div>                
</body>
</html>