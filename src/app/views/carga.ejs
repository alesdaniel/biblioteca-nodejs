<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carga datos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">   
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-band mx-1">Prestamo</a>
        <a href="/clientes" class="navbar-band mx-auto">Socios</a>
        <a href="/carga" class="nav-item nav bg-dark mx-1">Provincias</a>
        <a href="/genero" class="nav-item nav bg-dark mx-1">Genero</a>
        <a href="/Libros" class="nav-item nav bg-dark mx-1">Libros</a>
    </nav>
    <!-- Plantilla --> 
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <h1 class="card-title text-center my-5">Provincias</h1>
                <table class="table table-striped">
                    <tr>
                      <th>ID</th>
                      <th>Provincia</th>
                      <th></th>
                    </tr>
                    <% for (var i=0;i<provincias.length;i++) { %>
                    <tr>
                        <td><%= provincias[i].id_provincia %></td>
                        <td><%= provincias[i].provincia %></td>
                        <td>
                            <a href="/borrar_provincia/<%= provincias[i].id_provincia %>" class="btn btn-danger">Borrar</a>
                            <a href="/editar_provincia/<%= provincias[i].id_provincia %>" class="btn btn-info">Editar</a>
                        </td>
                    </tr>
                    <% } %>
                </table>
            </div>
            <div class="col-md-6 mt-4 card">
                <form action="/provincias" method="post" class="card-body">
                    <h3 class="card-title">Agregar Provincias</h3>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="provincia"></input>
                    </div>
                    <input type="submit" class="btn-primary my-4" value="Guardar">
                </form>
            </div>
        </div>
    </div>                    
</body>
</html>